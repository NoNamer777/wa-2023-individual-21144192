{
    "extends": ["../../.eslintrc.json", "plugin:vue/vue3-essential", "@vue/typescript/recommended"],
    "root": false,
    "ignorePatterns": ["!**/*"],
    "env": {
        "node": true
    },
    "overrides": [
        {
            "files": ["*.js", "*.ts", "*.vue"],
            "rules": {}
        },
        {
            "files": ["*.js"],
            "rules": {}
        },
        {
            "files": ["*.ts"],
            "rules": {
                "no-case-declarations": "off"
            }
        },
        {
            "files": ["*.vue"],
            "rules": {
                "vue/multi-word-component-names": "off"
            }
        },
        {
            "files": ["**/*.spec.{j,t}s"],
            "env": {
                "jest": true
            }
        }
    ]
}
