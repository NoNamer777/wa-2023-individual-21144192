{
    "exclude": ["node_modules", "tmp"],
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@dnd-mapp/data": ["packages/app-data/src/index.ts"],
            "@vue-app/*": ["packages/vue-app/src/*"]
        },
        "rootDir": ".",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "sourceMap": true,
        "target": "es2015"
    }
}
